<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewUpperLine"
        android:layout_width="1dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorTextLightGrey"/>

    <LinearLayout
        android:id="@+id/llBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewUpperLine"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStartedUsing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_startedusingrcash"
                android:textSize="16dp"
                android:textColor="@color/colorTextLightGrey" />

            <TextView
                android:id="@+id/tvGather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:textColor="@color/blackThemeRed"
                android:text="@string/app_name"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="October 8, Night"
            android:textSize="10dp"
            android:textColor="@color/colorTextLightGrey" />

    </LinearLayout>

    <View
        android:id="@+id/viewLowerLine"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_below="@id/llBody"
        android:layout_centerHorizontal="true"
        android:background="@color/colorTextLightGrey"/>

</RelativeLayout>
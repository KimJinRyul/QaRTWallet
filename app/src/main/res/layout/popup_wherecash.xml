<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin2"
        android:layout_marginRight="@dimen/default_margin2"
        android:padding="@dimen/default_margin2"
        android:background="@drawable/shape_rect_bluegrey"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            android:background="@drawable/ripple_effect"
            android:src="@drawable/round_close_white_24"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="@dimen/textsize_12dp"
            android:textColor="@color/colorTextLight"
            android:text="WHERE CASH TITLE HERE"/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/default_margin2"
            android:background="@color/colorTextLightGrey"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_margin2"
            android:textSize="@dimen/textsize_10dp"
            android:textColor="@color/colorTextLight"
            android:text="WHERE CASH DESCRIPTION HERE"/>

    </LinearLayout>

</RelativeLayout>